      <Label fx:id="oldNameLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="28.0" layoutY="210.0" prefHeight="17.0" prefWidth="166.0" textAlignment="CENTER" />
      <Label fx:id="oldPointsLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="217.0" layoutY="210.0" prefHeight="17.0" prefWidth="145.0" textAlignment="CENTER" />
   </children>
</AnchorPane>
