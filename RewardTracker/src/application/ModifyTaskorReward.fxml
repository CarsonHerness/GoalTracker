<AnchorPane prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="application.ModifyTaskOrRewardController">
   <children>
      <Button fx:id="submitModification" layoutX="394.0" layoutY="230.0" mnemonicParsing="false" onAction="#submitModification" text="Submit" />
      <TextField fx:id="nameOfTaskOrReward" layoutX="28.0" layoutY="230.0" prefHeight="25.0" prefWidth="166.0" />
      <TextField fx:id="pointsOfTaskOrReward" layoutX="216.0" layoutY="230.0" prefHeight="25.0" prefWidth="145.0" />
      <Label layoutX="40.0" layoutY="64.0" text="Add, Remove, or Modify Task or Reward">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <ComboBox fx:id="modifyChooseTaskTypeOrReward" layoutX="28.0" layoutY="174.0" onAction="#chooseTaskTypeOrReward" prefHeight="25.0" prefWidth="221.0" promptText="Choose Task Type or Reward" />
      <ComboBox fx:id="modifyChooseAction" layoutX="142.0" layoutY="124.0" onAction="#chooseAction" prefHeight="25.0" prefWidth="221.0" promptText="Choose Add, Remove, or Modify" />
