   <children>
      <Button fx:id="submitModification" layoutX="223.0" layoutY="256.0" mnemonicParsing="false" text="Submit" />
      <TextField fx:id="nameOfTaskOrReward" layoutX="57.0" layoutY="218.0" prefHeight="25.0" prefWidth="166.0" />
      <TextField fx:id="pointsOfTaskOrReward" layoutX="277.0" layoutY="218.0" prefHeight="25.0" prefWidth="72.0" />
